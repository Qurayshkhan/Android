<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/main"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/card1"
        android:backgroundTint="#ADD8E6"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:background="@color/cardview_shadow_end_color">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image"
        android:src="@drawable/pnjb"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Punjab"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            />
</androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/card2"
        android:backgroundTint="#FFEFD5"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:background="@color/cardview_shadow_end_color">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image2"
        android:src="@drawable/sindh"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sindh"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="7dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            />
</androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/card3"
        android:backgroundTint="#ADD8E6"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/card5"
        android:background="@color/cardview_shadow_end_color">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image3"
            android:src="@drawable/baloch"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balochistan"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/card4"
        android:backgroundTint="#FFEFD5"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/card5"
        android:background="@color/cardview_shadow_end_color">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image4"
            android:src="@drawable/kpk"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KPK"
            android:layout_marginLeft="18dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/card5"
        android:backgroundTint="#87CEEB"
        app:cardCornerRadius="60dp"
        android:layout_below="@+id/card1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"
        android:background="@color/cardview_shadow_end_color">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image5"
            android:src="@drawable/gb"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gilgit"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="7dp"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            />
    </androidx.cardview.widget.CardView>
</RelativeLayout>
</ScrollView>